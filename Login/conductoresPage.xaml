<Window x:Class="Login.conductoresPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="conductoresPage" Height="300" Width="800">
    <Grid Background="#F9F9F9" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Menú Conductores" 
                   FontSize="22" FontWeight="Bold"
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Button Content="Registrar Conductor" Height="40" Margin="0,5" Background="DodgerBlue" Foreground="White"/>
            <Button Content="Listar Conductores" Height="40" Margin="0,5" Background="DarkCyan" Foreground="White"/>
            <Button Content="Volver al Home" Height="40" Margin="0,5" Background="Gray" Foreground="White" Click="irHome"/>
        </StackPanel>
    </Grid>
</Window>
